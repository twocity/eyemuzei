<resources>

  <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
  </style>

  <style name="SettingTitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">24sp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_gravity">left|center_vertical</item>
  </style>

  <style name="TitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_gravity">left|center_vertical</item>
  </style>

  <style name="ValueStyle" parent="android:TextAppearance">
    <item name="android:textSize">15sp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_gravity">left|center_vertical</item>
  </style>

  <style name="LogoutButtonStyle" parent="android:Widget.Button">
    <item name="android:textSize">16sp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:background">@null</item>
  </style>


  <style name="ProgressBarStyle" parent="android:Widget.Holo.ProgressBar.Horizontal">
    <item name="android:minHeight">3dip</item>
    <item name="android:maxHeight">4dip</item>
  </style>

</resources>
